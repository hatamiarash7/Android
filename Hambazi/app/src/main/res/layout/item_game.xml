<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/uid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <helper.PersianTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/show"
        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/show"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textDirection="rtl"/>

    <helper.RoundedImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:contentDescription="Image"
        android:scaleType="centerCrop"/>

    <helper.PersianTextView
        android:id="@+id/play_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/show"
        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/show"
        android:text="دفعات اجرا"
        android:textColor="@color/md_cyan_100"/>

    <helper.PersianTextView
        android:id="@+id/point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_count"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/img"
        android:layout_toLeftOf="@+id/show"
        android:layout_toRightOf="@+id/img"
        android:layout_toStartOf="@+id/show"
        android:text="امتیاز"
        android:textColor="@color/md_cyan_100"/>

    <helper.PersianButton
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="اجرا"
        android:layout_margin="5dp"/>

</RelativeLayout>
