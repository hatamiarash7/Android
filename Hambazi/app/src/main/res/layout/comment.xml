<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">

    <helper.PersianEditText
        android:id="@+id/comment_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center"
        android:hint="عنوان پیام"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="5dp"/>

    <helper.PersianEditText
        android:id="@+id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="18"
        android:background="@color/gray"
        android:gravity="center_horizontal"
        android:hint="متن پیام"
        android:inputType="textMultiLine"
        android:padding="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">

        <helper.PersianButton
            android:id="@+id/comment_send_telegram"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ارسال با تلگرام"
            android:textSize="18sp"
            android:layout_width="120dp"
            android:textColor="@color/white"
            android:background="#30a7db"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"/>

        <helper.PersianButton
            android:id="@+id/comment_send"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ارسال"
            android:textSize="18sp"
            android:background="#c8c8c8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>