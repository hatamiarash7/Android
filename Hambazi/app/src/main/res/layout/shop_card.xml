<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/background"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <!-- Main ListView
         Always give id value as list(@android:id/list)
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <helper.PersianTextView
            android:id="@+id/ItemPriceHeader"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="قیمت"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/md_red_A400"
            android:textDirection="rtl"
            android:textSize="20sp" />

        <helper.PersianTextView
            android:id="@+id/ItemCountHeader"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="تعداد"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/md_red_A400"
            android:textDirection="rtl"
            android:textSize="20sp" />

        <helper.PersianTextView
            android:id="@+id/ItemNameHeader"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="نام"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/md_red_A400"
            android:textDirection="rtl"
            android:textSize="20sp"
            android:layout_width="140dp"/>
    </LinearLayout>


    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_weight="2.33"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/l1"
        android:layout_weight="1"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <helper.PersianTextView
                android:id="@+id/CardPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="0 تومان"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_black_1000"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <helper.PersianTextView
                android:id="@+id/CardPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="قیمت کل : "
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_red_A400"
                android:textDirection="rtl"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <helper.PersianTextView
                android:id="@+id/CardDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="0 تومان"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_black_1000"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <helper.PersianTextView
                android:id="@+id/CardDiscountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="تخفیف : "
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_red_A400"
                android:textDirection="rtl"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <helper.PersianTextView
                android:id="@+id/CardTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:text="0 تومان"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_black_1000"
                android:textDirection="rtl"
                android:textSize="16sp" />

            <helper.PersianTextView
                android:id="@+id/CardTotalPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="مبلغ قابل پرداخت : "
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_red_A400"
                android:textDirection="rtl"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp">

        <helper.PersianButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/accent"
            android:text="@string/btn_clear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <helper.PersianButton
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/accent"
            android:text="@string/btn_pay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>