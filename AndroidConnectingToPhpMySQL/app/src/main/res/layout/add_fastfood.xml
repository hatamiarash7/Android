<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- Name Label -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="FastFood Name"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:textSize="17sp"/>

	<!-- Input Name -->
	<EditText android:id="@+id/NewNameFastFood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:singleLine="true"/>

	<!-- Price Label -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Open Hour"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:textSize="17sp"/>

	<!-- Input Price -->
	<EditText android:id="@+id/NewOpenHourFastFood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:singleLine="true"
		android:inputType="numberDecimal"/>

	<!-- Price Label -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Close Hour"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:textSize="17sp"/>

	<!-- Input Price -->
	<EditText android:id="@+id/NewCloseHourFastFood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:singleLine="true"
		android:inputType="numberDecimal"/>

	<!-- Description Label -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Address"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:textSize="17sp"/>

	<!-- Input description -->
	<EditText android:id="@+id/NewAddressFastFood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:gravity="top"/>

	<!-- Description Label -->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Picture"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:textSize="17sp"/>

	<!-- Input description -->
	<EditText android:id="@+id/NewPictureFastFood"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:gravity="top"/>
	
	<!-- Button Create Product -->
	<Button android:id="@+id/btnCreateProductFastFood"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Create Product"/>
	
</LinearLayout>