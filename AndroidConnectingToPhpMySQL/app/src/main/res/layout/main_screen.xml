<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <Button android:id="@+id/btnViewResturans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Resturans"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnViewFastFoods"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FastFoods"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnViewMarkets"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Markets"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnCreateResturan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Products"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnCreateFastFood"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Products"
        android:layout_marginTop="25dip"/>

    <Button android:id="@+id/btnCreateMarket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add New Products"
        android:layout_marginTop="25dip"/>

</LinearLayout>