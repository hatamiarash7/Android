<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ResturanName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Resturan Name"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/ResturanAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Address"
        android:textSize="17sp"
        android:layout_below="@+id/L1"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Picture"
        android:textSize="17sp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/ResturanAddress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/L1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ResturanName"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/ResturanCloseHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="66"
            android:textSize="17sp" />

        <TextView
            android:text="الی"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="17sp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/ResturanOpenHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="55"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginEnd="10dp" />

        <TextView
            android:text="ساعت کاری :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="17sp"
            android:layout_marginEnd="15dp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ResturanAddress"/>


</RelativeLayout>