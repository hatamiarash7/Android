<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<ir.hatamiarash.mysql.PersianTextView
		android:id="@+id/MarketName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="Market Name"
		android:textSize="26sp"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:textAlignment="center" />


	<ir.hatamiarash.mysql.PersianTextView
		android:id="@+id/MarketAddress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="Address"
		android:textSize="17sp"
		android:layout_below="@+id/L1"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:textAlignment="center"
		android:paddingBottom="10dp" />

	<ir.hatamiarash.mysql.PersianTextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="Picture"
		android:textSize="17sp"
		android:layout_marginStart="11dp"
		android:layout_marginLeft="11dp"
		android:layout_below="@+id/MarketAddress"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="49dp"
		android:visibility="gone" />

	<LinearLayout
		android:id="@+id/L1"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/MarketName"
		android:layout_centerHorizontal="true">

		<ir.hatamiarash.mysql.PersianTextView
			android:id="@+id/MarketCloseHour"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:paddingTop="10dip"
			android:text="66"
			android:textSize="17sp" />

		<ir.hatamiarash.mysql.PersianTextView
			android:text="الی"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView2"
			android:textSize="17sp"
			android:layout_marginEnd="20dp"
			android:layout_marginStart="20dp"
			android:textStyle="normal|bold" />

		<ir.hatamiarash.mysql.PersianTextView
			android:id="@+id/MarketOpenHour"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:paddingTop="10dip"
			android:text="55"
			android:textSize="17sp"
			android:textAlignment="center"
			android:layout_marginRight="10dp"
			android:layout_marginEnd="10dp" />

        <ir.hatamiarash.mysql.PersianTextView
			android:text="ساعت کاری :"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView3"
			android:textSize="17sp"
			android:layout_marginRight="15dp"
			android:layout_marginEnd="15dp"
			android:textStyle="normal|bold" />

	</LinearLayout>

	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/MarketAddress"/>


</RelativeLayout>