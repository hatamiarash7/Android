<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.adad.sampleapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ir.adad.client.AdadActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="AdadToken"
            android:value="xxxxxxxxxxxxxxxxxxxxxx" />
        <meta-data
            android:name="AdadBannersEnabledOnStart"
            android:value="true" />
        <meta-data
            android:name="AdadTestMode"
            android:value="true" />
        <meta-data
            android:name="AdadShowRemoveAds"
            android:value="true" />
        <meta-data
            android:name="AdadLogging"
            android:value="true" />
        <meta-data
            android:name="AdadLoggingLevel"
            android:value="debug" />

        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
    </application>

</manifest>
